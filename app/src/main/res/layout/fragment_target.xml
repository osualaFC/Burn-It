<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TargetFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/put_your_self_to_the_test"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/today_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_s_target"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <LinearLayout
        android:id="@+id/llTodayTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/today_target"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTodayTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:hintTextColor="@color/colorWhite"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTodayTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="@string/_2"
                android:textColor="@color/colorWhite"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setTodayTarget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
           android:text="@string/set_target"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/weekly_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_week_target"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTodayTarget"/>

    <LinearLayout
        android:id="@+id/llWeeklyTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/weekly_target"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilWeeklyTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:hintTextColor="@color/colorWhite"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWeeklyTarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="@string/_10"
                android:textColor="@color/colorWhite"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setWeeklyTarget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/set_target"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/monthly_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_month_target"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llWeeklyTarget"/>

    <LinearLayout
        android:id="@+id/llMonthlyTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/monthly_target"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMonthlyTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:hintTextColor="@color/colorWhite"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMonthlyTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="@string/_40"
                android:textColor="@color/colorWhite"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setMonthlyTarget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/set_target"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>